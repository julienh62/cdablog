{% extends 'base.html.twig' %}

{% block title %}Hello TagController!{% endblock %}

{% block body %}
<h1>Les tags </h1>
  <div class="container">
     
    <ul>
        {% for tag in tags %}
            <li>
               <h2> {{ tag.name }} </h2>
                <a href="{{ path('all_tag_show', {'name': tag.name}) }}">{{ tag.name }}</a>
                {# {'name': tag.name} : correspond à au parametre id que l'on pase à la routeid   #}
            </li>
            <h2> {{ tag.name }} </h2>
         {% endfor %}
    </ul>
    </div>

{% endblock %}


